<header class="marketing-header overflow-hidden bg-purple-000 border-b border-purple-300 {{classes}}">
  <div class="relative container-xl pb-8">
    <div style="bottom: -128px; left: -48px;" class="absolute">
      {{inline-svg "marketing/bubbles-1"}}
    </div>
    <div style="top: 64px; left: 128px;" class="absolute">
      {{inline-svg "marketing/bubbles-2" class="absolute pin-t"}}
    </div>
    <div style="top: 128px; right: 128px;" class="absolute">
      {{inline-svg "marketing/bubbles-3" class="absolute pin-r"}}
    </div>
    <div style="bottom: -128px; right: -48px;" class="absolute">
      {{inline-svg "marketing/bubbles-4"}}
    </div>
    {{marketing/menu-bar
      logomark=logomark
      redirectToDefaultOrganization=(route-action "redirectToDefaultOrganization")
    }}
    {{yield}}
  </div>
</header>

<div class="hero-main-image relative container-lg">
  <img src="{{image.file.url}}">
</div>
