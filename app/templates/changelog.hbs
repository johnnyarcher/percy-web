{{title "Changelog"}}
<header class="primary-hero bg-purple-gradient text-white pb-2">
  <div class="container container-xl">
    <div class="flex justify-between items-center mb-9">
      {{inline-svg "percy-full-horizontal-on-dark"}}
      <div class="flex justify-end pt-2 mb-2 text-white font-semibold">
        {{#if session.isAuthenticated}}
          {{nav-menu user=session.currentUser}}
        {{else}}
          <div class="flex justify-end pt-2 mb-4">
            {{nav-menu}}
          </div>
        {{/if}}
      </div>
    </div>
  </div>
  {{marketing/hero-block content=model.hero}}

</header>

<section class="bg-gray-pattern">
  <div class="container-md relative pt-8 pb-4">

    <div class="hidden sm:block absolute h-full bg-gray-100" style="width: 1px; top: 0; left: 116px;"></div>

    {{changelog-post-list changelogPosts=model}}
  </div>
</section>

{{main-footer}}
